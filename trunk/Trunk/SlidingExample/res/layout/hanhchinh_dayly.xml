<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/lay_calenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/background" >

        <TextView
            android:id="@+id/tvTitle"
            style="@style/text_header"
            android:layout_centerInParent="true"
            android:text="NHÂN VIÊN HÀNH CHÍNH" />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_drawer"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/root_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_calenda"
        android:layout_margin="10dp"
        android:background="@drawable/list_item_bg"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnCalendar_hanhchinh"
            android:gravity="center_horizontal"
            android:text="Chọn ngày" />

        <ImageView
            android:id="@+id/btnCalendar_hanhchinh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_today" />
    </RelativeLayout>

    <LinearLayout
        style="@style/form_f_w"
        android:layout_below="@+id/root_calendar"
        android:orientation="vertical"
        android:weightSum="2" >

        <TextView
            style="@style/form_f_w"
            android:background="#0d3327"
            android:gravity="center"
            android:text="Sáng"
            android:textColor="#ffffff" />

        <ListView
            android:id="@+id/lv_sang"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </ListView>

        <TextView
            style="@style/form_f_w"
            android:background="#ffffff"
            android:text="Sáng"
            android:textColor="#ffffff" />

        <TextView
            style="@style/form_f_w"
            android:background="#0d3327"
            android:gravity="center"
            android:text="Chiều"
            android:textColor="#ffffff" />

        <ListView
            android:id="@+id/lv_chieu"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </ListView>

        <TextView
            style="@style/form_f_w"
            android:background="#ffffff"
            android:text="Sáng"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>