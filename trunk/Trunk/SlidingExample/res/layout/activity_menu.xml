<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_backgroud_grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="5dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/tv_fromname"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="QUẢN LÝ NHÂN SỰ"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnAdd_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#013235"
        android:clickable="true"
        android:drawableTop="@drawable/personal"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Thêm nhân sự"
        android:textColor="#ffffff" />

    <ListView
        android:id="@+id/lv_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp" >
    </ListView>

</LinearLayout>